---
import Card from '@/components/Card.astro';
import Heading from '@/components/Heading.astro';
import { Image } from 'astro:assets';

const { full = false } = Astro.props;
---

<section class='section' itemscope itemtype="https://schema.org/CollectionPage">
  <Heading title='Projects' description="Latests projects I've made" />
  <meta itemprop="name" content="Projects" />
  <meta itemprop="description" content="Latests projects I've made" />
  <ul class='card-list' transition:animate="fade" itemscope itemtype="https://schema.org/ItemList">
    <!-- <li itemprop="itemListElement" itemscope itemtype="https://schema.org/SoftwareApplication">
      <a href='#' title='Bridge project' target='_blank'>
        <Card image='/bridge.webp' alt='Bridge logo' title='Bridge' year='WIP' personal/>
      </a>
    </li> -->
    <li itemprop="itemListElement" itemscope itemtype="https://schema.org/SoftwareApplication">
      <a href='/projects/fcm/' title='FCM project' target='_blank'>
        <Card image='/fcm.webp' alt='FCM logo' title='FCM' year='2025' />
      </a>
    </li>
    <li itemprop="itemListElement" itemscope itemtype="https://schema.org/SoftwareApplication">
      <a href='/projects/robotstxt/' title='Robots.txt project' target='_blank'>
        <Card
          image='/robotstxt.webp'
          alt='Robots.txt logo'
          title='Robots.txt'
          year='2024'
          personal
        />
      </a>
    </li>
    <li itemprop="itemListElement" itemscope itemtype="https://schema.org/SoftwareApplication">
      <a href='/projects/topdelmes/' title='Topdelmes project' target='_blank'>
